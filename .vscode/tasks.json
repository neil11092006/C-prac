{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file (with CS50)",
            "command": "/usr/bin/gcc",
            "args": [
    "-fdiagnostics-color=always",
    "-g",
    "${file}",
    "-o",
    "${fileDirname}/${fileBasenameNoExtension}",
    "-I${workspaceFolder}/libcs50/build/include",
    "-L${workspaceFolder}/libcs50/build/lib",
    "-lcs50"
],

            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task with CS50 library linked"
        }
    ]
}
